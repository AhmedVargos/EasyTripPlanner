<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="fallenleafapps.com.tripplanner.ui.activities.AddTripActivity">

    <include layout="@layout/include_toolbar" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/trip_name"
       >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Trip Name"
            android:textColor="@color/white" />
        </android.support.design.widget.TextInputLayout>

      <!--Date-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/date_pickerAndLabel"
        android:layout_below="@+id/trip_name">
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/dateBtn"
        android:text="@string/dateBtnName"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
    </LinearLayout>
        <!--Time-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_below="@+id/date_pickerAndLabel"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/timeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timeBtnName" />
        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/start_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="23dp"

        android:text= "Start Point" />

    <fragment
        android:id="@+id/startPlace_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_point"
        android:layout_weight="1"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        />
    <TextView
        android:id="@+id/end_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startPlace_autocomplete_fragment"
        android:layout_marginStart="23dp"
        android:text="End Point" />
        <fragment
            android:id="@+id/endPlace_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/end_point"
            android:layout_weight="1"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />

    <CheckBox
        android:id="@+id/roundTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_below="@+id/endPlace_autocomplete_fragment"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="23dp"
        android:text="Round Trip" />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:id="@+id/cardView"
            android:elevation="2dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/roundTrip">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButton2"
                android:orientation="horizontal">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="230dp"
                    android:id="@+id/noteText"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:hint="Note Body" />

                <Button
                    android:id="@+id/addNoteBtn"
                    android:layout_width="100dp"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:text="Add Note" />

            </LinearLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_add_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="Add Trip" />
</RelativeLayout>
